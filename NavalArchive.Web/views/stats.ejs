<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <h1 class="mb-4">Museum Statistics</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-warning"><%= error %></div>
      <% } else if (stats) { %>
        <div class="row g-4 mb-5">
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body py-4">
                <h2 class="display-4 text-primary"><%= stats.totalShips %></h2>
                <p class="card-text text-muted mb-0">Total Ships</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body py-4">
                <h2 class="display-4 text-primary"><%= stats.totalClasses %></h2>
                <p class="card-text text-muted mb-0">Ship Classes</p>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body py-4">
                <h2 class="display-4 text-primary"><%= stats.totalCaptains %></h2>
                <p class="card-text text-muted mb-0">Captains</p>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 mb-4">
            <div class="card">
              <div class="card-header">Ships by Type</div>
              <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                  <% if (stats.byType && stats.byType.length > 0) { %>
                    <% stats.byType.forEach(function(t) { %>
                      <li class="list-group-item d-flex justify-content-between">
                        <span><%= t.type %></span>
                        <span class="badge bg-dark"><%= t.count %></span>
                      </li>
                    <% }); %>
                  <% } else { %>
                    <li class="list-group-item text-muted">No data</li>
                  <% } %>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-lg-6 mb-4">
            <div class="card">
              <div class="card-header">Ships by Country</div>
              <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                  <% if (stats.byCountry && stats.byCountry.length > 0) { %>
                    <% stats.byCountry.forEach(function(c) { %>
                      <li class="list-group-item d-flex justify-content-between">
                        <span><%= c.country %></span>
                        <span class="badge bg-dark"><%= c.count %></span>
                      </li>
                    <% }); %>
                  <% } else { %>
                    <li class="list-group-item text-muted">No data</li>
                  <% } %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
