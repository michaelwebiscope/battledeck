<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <h1 class="mb-4">Ship Classes</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-warning"><%= error %></div>
      <% } %>
      <div class="row g-4">
        <% if (classes && classes.length > 0) { %>
          <% classes.forEach(function(c) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= c.name %></h5>
                  <p class="card-text text-muted mb-1"><%= c.type %> Â· <%= c.country %></p>
                  <p class="card-text small mb-2"><%= c.shipCount %> ship<%= c.shipCount !== 1 ? 's' : '' %> in class</p>
                  <a href="/classes/<%= c.id %>" class="btn btn-outline-dark btn-sm">View Ships</a>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="col-12 text-center text-muted py-5">No ship classes found.</div>
        <% } %>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
