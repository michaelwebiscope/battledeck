<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/classes">Ship Classes</a></li>
          <li class="breadcrumb-item active"><%= shipClass.name %></li>
        </ol>
      </nav>
      <h1 class="mb-2"><%= shipClass.name %></h1>
      <p class="text-muted mb-4"><%= shipClass.type %> Â· <%= shipClass.country %></p>
      <h3 class="mb-3">Ships in Class</h3>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Year Commissioned</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (shipClass.ships && shipClass.ships.length > 0) { %>
              <% shipClass.ships.forEach(function(ship) { %>
                <tr>
                  <td><strong><%= ship.name %></strong></td>
                  <td><%= ship.yearCommissioned %></td>
                  <td><a href="/ships/<%= ship.id %>" class="btn btn-outline-dark btn-sm">Details</a></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr><td colspan="3" class="text-center text-muted py-3">No ships in this class.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
