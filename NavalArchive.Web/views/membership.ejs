<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <h1 class="mb-4">Museum Membership</h1>
      <p class="lead text-muted mb-4">Get a simulated membership card. Runs on .NET 8 outside IIS.</p>
      <div class="row">
        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-header">Issue Card</div>
            <div class="card-body">
              <form id="issueForm">
                <div class="mb-3">
                  <label class="form-label">Name</label>
                  <input type="text" name="name" class="form-control" placeholder="Visitor name" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Tier</label>
                  <select name="tier" class="form-select">
                    <option value="Standard">Standard</option>
                    <option value="Patron">Patron</option>
                    <option value="Fleet">Fleet Admiral</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-dark">Issue Card</button>
              </form>
              <div id="issueResult" class="mt-3" style="display:none;"></div>
            </div>
          </div>
          <div class="card">
            <div class="card-header">Validate Card</div>
            <div class="card-body">
              <form id="validateForm">
                <div class="mb-3">
                  <label class="form-label">Card ID</label>
                  <input type="text" name="cardId" class="form-control" placeholder="NAV-XXXXXXXX">
                </div>
                <button type="submit" class="btn btn-outline-dark">Validate</button>
              </form>
              <div id="validateResult" class="mt-3" style="display:none;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('issueForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const name = document.querySelector('[name="name"]').value;
      const tier = document.querySelector('[name="tier"]').value;
      const resultEl = document.getElementById('issueResult');
      resultEl.style.display = 'block';
      resultEl.innerHTML = '<span class="text-muted">Issuing...</span>';
      try {
        const res = await fetch('/api/cards/issue', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, tier })
        });
        const data = await res.json();
        resultEl.innerHTML = '<div class="alert alert-success">✓ ' + data.message + '<br><strong>Card ID:</strong> ' + data.cardId + '</div>';
        document.querySelector('[name="cardId"]').value = data.cardId;
      } catch (err) {
        resultEl.innerHTML = '<div class="alert alert-danger">Card service unavailable. Ensure API and chain (API→Cart→Card) are running.</div>';
      }
    });
    document.getElementById('validateForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const cardId = document.querySelector('[name="cardId"]').value;
      const resultEl = document.getElementById('validateResult');
      resultEl.style.display = 'block';
      resultEl.innerHTML = '<span class="text-muted">Validating...</span>';
      try {
        const res = await fetch('/api/cards/validate/' + encodeURIComponent(cardId));
        const data = await res.json();
        resultEl.innerHTML = data.valid
          ? '<div class="alert alert-success">✓ ' + data.message + ' — ' + data.name + ' (' + data.tier + ')</div>'
          : '<div class="alert alert-warning">' + data.message + '</div>';
      } catch (err) {
        resultEl.innerHTML = '<div class="alert alert-danger">Card service unavailable. Ensure API and chain (API→Cart→Card) are running.</div>';
      }
    });
  </script>
</body>
</html>
