<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <h1 class="mb-4">Captains</h1>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-warning"><%= error %></div>
      <% } %>
      <div class="row g-4">
        <% if (captains && captains.length > 0) { %>
          <% captains.forEach(function(c) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100">
                <% if (c.imageUrl && c.imageUrl.startsWith('http')) { %>
                  <img src="<%= c.imageUrl %>" class="card-img-top" alt="<%= c.name %>" style="height: 200px; object-fit: cover;">
                <% } else { %>
                  <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                    <span class="text-white-50"><%= c.name %></span>
                  </div>
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= c.name %></h5>
                  <p class="card-text text-muted mb-1"><%= c.rank %></p>
                  <p class="card-text small mb-2"><%= c.serviceYears %> years service Â· <%= c.shipCount %> ship<%= c.shipCount !== 1 ? 's' : '' %> commanded</p>
                  <a href="/captains/<%= c.id %>" class="btn btn-outline-dark btn-sm">View Profile</a>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="col-12 text-center text-muted py-5">No captains found.</div>
        <% } %>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
