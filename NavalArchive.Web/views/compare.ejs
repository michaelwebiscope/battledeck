<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/fleet">Fleet Roster</a></li>
          <li class="breadcrumb-item active">Compare</li>
        </ol>
      </nav>
      <h1 class="mb-4">Compare Ships</h1>
      <% if (!ship1 || !ship2) { %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Select two ships to compare</h5>
            <form action="/compare" method="GET" class="row g-2">
              <div class="col-md-5">
                <select name="id1" class="form-select" required>
                  <option value="">Ship 1...</option>
                  <% (ships || []).forEach(function(s) { %>
                    <option value="<%= s.id %>" <%= (preselectedId == s.id) ? 'selected' : '' %>><%= s.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-5">
                <select name="id2" class="form-select" required>
                  <option value="">Ship 2...</option>
                  <% (ships || []).forEach(function(s) { %>
                    <option value="<%= s.id %>" <%= (preselectedId == s.id) ? 'disabled' : '' %>><%= s.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <button type="submit" class="btn btn-dark w-100">Compare</button>
              </div>
            </form>
          </div>
        </div>
        <% if (ship1) { %>
        <div class="alert alert-info">Select a second ship above to compare with <strong><%= ship1.name %></strong>.</div>
        <% } %>
      <% } %>
      <% if (ship1 && ship2) { %>
      <div class="row g-4">
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <span><%= ship1.name %></span>
              <a href="/ships/<%= ship1.id %>" class="btn btn-outline-light btn-sm">View</a>
            </div>
            <div class="card-body">
              <% if (ship1.imageUrl && ship1.imageUrl.startsWith('http')) { %>
                <img src="<%= ship1.imageUrl %>" class="img-fluid rounded mb-3" alt="<%= ship1.name %>" style="height: 200px; width: 100%; object-fit: cover;">
              <% } %>
              <p class="text-muted small">Commissioned <%= ship1.yearCommissioned %></p>
              <p><%= ship1.description %></p>
              <% if (ship1.class) { %>
                <p class="mb-0"><strong>Class:</strong> <%= ship1.class.name %> 路 <%= ship1.class.type %> 路 <%= ship1.class.country %></p>
              <% } %>
              <% if (ship1.captain) { %>
                <p class="mb-0"><strong>Captain:</strong> <%= ship1.captain.name %> (<%= ship1.captain.rank %>)</p>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
              <span><%= ship2.name %></span>
              <a href="/ships/<%= ship2.id %>" class="btn btn-outline-light btn-sm">View</a>
            </div>
            <div class="card-body">
              <% if (ship2.imageUrl && ship2.imageUrl.startsWith('http')) { %>
                <img src="<%= ship2.imageUrl %>" class="img-fluid rounded mb-3" alt="<%= ship2.name %>" style="height: 200px; width: 100%; object-fit: cover;">
              <% } %>
              <p class="text-muted small">Commissioned <%= ship2.yearCommissioned %></p>
              <p><%= ship2.description %></p>
              <% if (ship2.class) { %>
                <p class="mb-0"><strong>Class:</strong> <%= ship2.class.name %> 路 <%= ship2.class.type %> 路 <%= ship2.class.country %></p>
              <% } %>
              <% if (ship2.captain) { %>
                <p class="mb-0"><strong>Captain:</strong> <%= ship2.captain.name %> (<%= ship2.captain.rank %>)</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <a href="/compare" class="btn btn-outline-dark">Choose Different Ships</a>
      </div>
      <% } %>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
