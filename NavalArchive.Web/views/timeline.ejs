<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <h1 class="mb-4">Naval Timeline</h1>
      <p class="text-muted mb-4">Key events of the Second World War at sea.</p>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-warning"><%= error %></div>
      <% } else if (events && events.length > 0) { %>
        <div class="timeline">
          <% events.forEach(function(evt) { %>
            <div class="card mb-3">
              <div class="card-body">
                <div class="d-flex">
                  <div class="me-4 text-center" style="min-width: 80px;">
                    <span class="badge bg-dark fs-6"><%= evt.year %></span>
                    <p class="small text-muted mb-0 mt-1"><%= evt.month %></p>
                  </div>
                  <div>
                    <h5 class="card-title mb-1"><%= evt.title %></h5>
                    <p class="card-text text-muted mb-0"><%= evt.description %></p>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center text-muted py-5">No timeline events available.</div>
      <% } %>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
