<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <h1 class="mb-4">Support the Museum</h1>
      <p class="lead text-muted mb-4">Make a simulated donation to the Naval Archive. This uses our payment simulation service (runs outside IIS on .NET 8).</p>
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <form id="donateForm">
                <div class="mb-3">
                  <label class="form-label">Amount (USD)</label>
                  <input type="number" name="amount" class="form-control" value="25" min="1" step="0.01" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Description</label>
                  <input type="text" name="description" class="form-control" value="Museum donation" placeholder="Optional">
                </div>
                <button type="submit" class="btn btn-dark">Simulate Payment</button>
              </form>
              <div id="result" class="mt-3" style="display:none;"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('donateForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const amount = document.querySelector('[name="amount"]').value;
      const description = document.querySelector('[name="description"]').value;
      const resultEl = document.getElementById('result');
      resultEl.style.display = 'block';
      resultEl.innerHTML = '<span class="text-muted">Processing...</span>';
      try {
        const res = await fetch('/payments/api/payment/simulate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ amount: parseFloat(amount), currency: 'USD', description })
        });
        const data = await res.json();
        resultEl.innerHTML = data.approved
          ? '<div class="alert alert-success">âœ“ ' + data.message + ' (Transaction: ' + data.transactionId + ')</div>'
          : '<div class="alert alert-warning">' + data.message + '</div>';
      } catch (err) {
        resultEl.innerHTML = '<div class="alert alert-danger">Payment service unavailable. Ensure it is running on port 5001.</div>';
      }
    });
  </script>
</body>
</html>
