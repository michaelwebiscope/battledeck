<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/fleet">Fleet Roster</a></li>
          <li class="breadcrumb-item active"><%= ship.name %></li>
        </ol>
      </nav>
      <div class="row">
        <div class="col-lg-4 mb-4">
          <div class="card">
            <% if (ship.imageUrl && ship.imageUrl.startsWith('http')) { %>
              <img src="<%= ship.imageUrl %>" class="card-img-top" alt="<%= ship.name %>" style="height: 240px; object-fit: cover;">
            <% } else { %>
              <a href="/gallery/image/<%= ship.id %>" target="_blank" class="text-decoration-none">
                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 240px;">
                  <span class="text-white">View Archive Photo</span>
                </div>
              </a>
            <% } %>
          </div>
        </div>
        <div class="col-lg-8">
          <h1 class="mb-3"><%= ship.name %></h1>
          <p class="text-muted mb-3">Commissioned <%= ship.yearCommissioned %></p>
          <p class="lead"><%= ship.description %></p>
          <div class="row mt-4">
            <% if (ship.class) { %>
              <div class="col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-header">Class</div>
                  <div class="card-body">
                    <h5><%= ship.class.name %></h5>
                    <p class="mb-0 text-muted"><%= ship.class.type %> · <%= ship.class.country %></p>
                    <a href="/classes/<%= ship.class.id %>" class="btn btn-outline-dark btn-sm mt-2">View Class</a>
                    <a href="/compare?id1=<%= ship.id %>" class="btn btn-outline-secondary btn-sm mt-2">Compare with another</a>
                  </div>
                </div>
              </div>
            <% } %>
            <% if (ship.captain) { %>
              <div class="col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-header">Captain</div>
                  <div class="card-body">
                    <h5><%= ship.captain.name %></h5>
                    <p class="mb-0 text-muted"><%= ship.captain.rank %> · <%= ship.captain.serviceYears %> years service</p>
                    <a href="/captains/<%= ship.captain.id %>" class="btn btn-outline-dark btn-sm mt-2">View Captain</a>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
