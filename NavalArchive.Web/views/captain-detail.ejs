<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <div class="container py-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/captains">Captains</a></li>
          <li class="breadcrumb-item active"><%= captain.name %></li>
        </ol>
      </nav>
      <div class="row">
        <div class="col-lg-4 mb-4">
          <div class="card">
            <% if (captain.imageUrl && captain.imageUrl.startsWith('http')) { %>
              <img src="<%= captain.imageUrl %>" class="card-img-top" alt="<%= captain.name %>" style="height: 280px; object-fit: cover;">
            <% } else { %>
              <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 280px;">
                <span class="text-white-50"><%= captain.name %></span>
              </div>
            <% } %>
          </div>
        </div>
        <div class="col-lg-8">
      <h1 class="mb-2"><%= captain.name %></h1>
      <p class="text-muted mb-4"><%= captain.rank %> Â· <%= captain.serviceYears %> years of service</p>
      <h3 class="mb-3">Ships Commanded</h3>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Ship</th>
              <th>Year Commissioned</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if (captain.ships && captain.ships.length > 0) { %>
              <% captain.ships.forEach(function(ship) { %>
                <tr>
                  <td><strong><%= ship.name %></strong></td>
                  <td><%= ship.yearCommissioned %></td>
                  <td><a href="/ships/<%= ship.id %>" class="btn btn-outline-dark btn-sm">Details</a></td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr><td colspan="3" class="text-center text-muted py-3">No ships on record.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
